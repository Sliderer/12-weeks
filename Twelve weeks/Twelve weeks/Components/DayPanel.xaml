<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Twelve_weeks.Components.DayPanel"
             Margin="10"
             Loaded="ContentView_Loaded">

    <Frame 
           CornerRadius="5"
           BackgroundColor="{StaticResource DarkGreen}"
           >

        <Frame.GestureRecognizers>
            <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>
        </Frame.GestureRecognizers>
        <VerticalStackLayout>
            <HorizontalStackLayout>
                <Label x:Name="Date" Text="{Binding Path=date, StringFormat='Date {0}' }" Style="{StaticResource TaskTextH1}"/>

            </HorizontalStackLayout>
            <Label x:Name="Progress" Text="{Binding progress}"  Style="{StaticResource TaskTextH1}"/>

        </VerticalStackLayout>
    </Frame>
</ContentView>
